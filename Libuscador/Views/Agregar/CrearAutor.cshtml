@using Libuscador.Models
@model AUTORES
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{

    DBLibros_MarianoRamborgerEntities db = new DBLibros_MarianoRamborgerEntities();

}

<body>
    <main class="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h2 class="sTitle"> Añadir un autor!  </h2>



            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="campoTitulo"> <span> Nombre del Autor <span> </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Aut_Nombre, new { htmlAttributes = new { @class = "form-control reqInput" } })
                        @Html.ValidationMessageFor(model => model.Aut_Nombre, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="campoTitulo"> <span> Pais del Autor <span></div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Pais, new { htmlAttributes = new { @class = "form-control reqInput" } })
                        @Html.ValidationMessageFor(model => model.Pais, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(model => model.Aut_Id)


                <div class="form-group">
                    <div class="d-flex p-2 justify-content-center">
                        <input type="button" value="Añadir Autor!" class="btn btn-default" id="submitButton" />
                    </div>
                </div>
            </div>



        }

        <div id="errorPanel"></div>


    </main>
      <script src="~/Content/Scripts/ScriptCrear.js"></script>
    </body>
     

        





